<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LogInFilter</filter-name>
        <filter-class>Filter.LogInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogInFilter</filter-name>
        <servlet-name>MainPage</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LogInFilter</filter-name>
        <servlet-name>AdminController</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <servlet-class>Controller.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>Controller.AdminPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DepartmentCtrl</servlet-name>
        <servlet-class>Controller.DepartmentCtrl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PositionCtrl</servlet-name>
        <servlet-class>Controller.PositionCtrl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/MainPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/Login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/control</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepartmentCtrl</servlet-name>
        <url-pattern>/DepartmentCtrl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PositionCtrl</servlet-name>
        <url-pattern>/PositionCtrl</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
